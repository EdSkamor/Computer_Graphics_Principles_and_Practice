<Window x:Class="Computer_Graphics_Principles_and_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Graphics_Principles_and_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas
        xmlns= "http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        xmlns:x= "http://schemas.microsoft.com/winfx/2006/xaml"
        ClipToBounds="True">
        <!-- THE SCENE -->
        <Ellipse
            Canvas.Left="-10.0" Canvas.Top="-10.0"
            Width="20.0" Height="20.0"
            Fill="lightgray" />
        <!-- DISPLAY TRANSFORMATION -->
        <Canvas.RenderTransform>
            <TransformGroup>
                <TranslateTransform X="9.6" Y="9.6" />
                <ScaleTransform ScaleX="4.8" ScaleY="4.8"
                                CenterX="0" CenterY="0"/>
                
            </TransformGroup>
        </Canvas.RenderTransform>
        
    </Canvas>
</Window>
